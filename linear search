#include<stdio.h> 

int linearSearch(int [], int, int); 

int main() 

{ 

    int a[20], i, n, key, pos; 

    printf("Enter n:"); 

    scanf("%d",&n); 

    printf("Enter %d elements:\n",n); 

    for(i=0;i<n;i++) 
    {

       scanf("%d",&a[i]);
    }

    printf("Enter the element to be searched:\t"); 

    scanf("%d",&key); 

    pos=linearSearch(a, n, key); 

    if(pos==-1)
    {
       printf("Search is unsuccessful\n");
    }  

    else 
       printf("Key is found at index: %d\n",pos); 

 

     return 0; 

} 

int linearSearch(int a[], int n, int key) 

{ 

     int i; 

     for(i=0;i<n;i++) 

     { 

        if(a[i]==key)
        {
          return i;
        } 

     } 

     return -1; 

}
